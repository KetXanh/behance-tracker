{
  "version": 2,
  "builds": [{ "src": "api/*.js", "use": "@vercel/node" }],
  "routes": [
    { "src": "/", "dest": "/api/index.js" },
    { "src": "/behance", "dest": "/api/behance.js" },
    { "src": "/stats", "dest": "/api/stats.js" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" }
  ]
}
